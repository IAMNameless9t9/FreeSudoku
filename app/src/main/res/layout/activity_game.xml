<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/timerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00:00:00"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="settings" />

    </LinearLayout>

    <GridLayout
        android:id="@+id/gameView"
        android:layout_width="360dp"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_height="360dp"
        android:layout_margin="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/black">

        <GridLayout
            android:id="@+id/topLeftGrid"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:rowCount="3"
            android:columnCount="3"
            android:layout_marginTop="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:background="@color/black">

            <TextView
                android:id="@+id/topLeftTopLeftBox"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/topLeftTopCenterBox"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/topLeftTopRightBox"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/topLeftMiddleLeftBox"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginEnd="1dp"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/topLeftMiddleCenterBox"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/topLeftMiddleRightBox"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginStart="1dp"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/topLeftBottomLeftBox"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginEnd="1dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/topLeftBottomCenterBox"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/topLeftBottomRightBox"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"/>

        </GridLayout>
        <GridLayout
            android:id="@+id/topCenterGrid"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:rowCount="3"
            android:columnCount="3"
            android:layout_marginTop="2dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:background="@color/black">

            <TextView
                android:id="@+id/topCenterTopLeftBox"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/topCenterTopCenterBox"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/topCenterTopRightBox"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/topCenterMiddleLeftBox"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginEnd="1dp"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/topCenterMiddleCenterBox"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/topCenterMiddleRightBox"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginStart="1dp"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/topCenterBottomLeftBox"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginEnd="1dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/topCenterBottomCenterBox"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/topCenterBottomRightBox"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"/>

        </GridLayout>
        <GridLayout
            android:id="@+id/topRightGrid"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:rowCount="3"
            android:columnCount="3"
            android:layout_marginTop="2dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="1dp"
            android:background="@color/white">

        </GridLayout>
        <GridLayout
            android:id="@+id/middleLeftGrid"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:rowCount="3"
            android:columnCount="3"
            android:layout_marginTop="1dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:background="@color/white">

        </GridLayout>
        <GridLayout
            android:id="@+id/middleCenterGrid"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:rowCount="3"
            android:columnCount="3"
            android:layout_marginTop="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:background="@color/white">

        </GridLayout>
        <GridLayout
            android:id="@+id/middleRightGrid"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:rowCount="3"
            android:columnCount="3"
            android:layout_marginTop="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="1dp"
            android:background="@color/white">

        </GridLayout>
        <GridLayout
            android:id="@+id/bottomLeftGrid"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:rowCount="3"
            android:columnCount="3"
            android:layout_marginTop="1dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="2dp"
            android:background="@color/white">

        </GridLayout>
        <GridLayout
            android:id="@+id/bottomCenterGrid"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:rowCount="3"
            android:columnCount="3"
            android:layout_marginTop="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="2dp"
            android:background="@color/white">

        </GridLayout>
        <GridLayout
            android:id="@+id/bottomRightGrid"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:rowCount="3"
            android:columnCount="3"
            android:layout_marginTop="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/white">

        </GridLayout>

    </GridLayout>

    <LinearLayout
        android:id="@+id/masterButtonLayout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@+id/gameView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/topRowButtonLayout"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/oneButton"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:text="1"
                android:layout_margin="10dp"
                android:textSize="25sp" />
            <Button
                android:id="@+id/twoButton"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:text="2"
                android:layout_margin="10dp"
                android:textSize="25sp"/>
            <Button
                android:id="@+id/threeButton"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:text="3"
                android:layout_margin="10dp"
                android:textSize="25sp"/>
            <Button
                android:id="@+id/fourButton"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:text="4"
                android:layout_margin="10dp"
                android:textSize="25sp"/>
            <Button
                android:id="@+id/fiveButton"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:text="5"
                android:layout_margin="10dp"
                android:textSize="25sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomRowButtonLayout"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/sixButton"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:text="6"
                android:layout_margin="10dp"
                android:textSize="25sp"/>
            <Button
                android:id="@+id/sevenButton"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:text="7"
                android:layout_margin="10dp"
                android:textSize="25sp"/>
            <Button
                android:id="@+id/eightButton"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:text="8"
                android:layout_margin="10dp"
                android:textSize="25sp"/>
            <Button
                android:id="@+id/nineButton"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:text="9"
                android:layout_margin="10dp"
                android:textSize="25sp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>